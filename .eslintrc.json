{
    "root": true,
    "rules": {
        "indent": [
            "error", 4,
            {
                "flatTernaryExpressions": true,
                "MemberExpression": 0,
                "SwitchCase": 1
            }
        ],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "babel/no-invalid-this": 1,
        "react/display-name": 0
    },
    "env": {
        "amd": true,
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true
        }
    },
    "plugins": [
      "react",
      "babel"
    ]
}